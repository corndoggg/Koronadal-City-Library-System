{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Python Dependencies",
      "type": "shell",
      "command": "pip install -r requirements.txt",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Flask Server",
      "type": "shell",
      "command": "python main.py",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "problemMatcher": [],
      "isBackground": true,
      "dependsOn": [
        "Install Python Dependencies"
      ]
    },
    {
      "label": "Install Frontend Dependencies",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/kcls-app"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Vite React App",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/kcls-app"
      },
      "group": "build",
      "problemMatcher": [],
      "isBackground": true,
      "dependsOn": [
        "Install Frontend Dependencies"
      ]
    },
    {
      "label": "Start Full Stack App",
      "dependsOn": [
        "Run Flask Server",
        "Run Vite React App"
      ],
      "dependsOrder": "parallel"
    }
  ]
}
